{
  "name": "claude-lens-desktop",
  "version": "0.2.2",
  "description": "Claude Lens Desktop - Seamless browser + Claude Code integration",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build && concurrently -k \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.main.json && mkdir -p dist/main/inject && cp src/main/inject/*.js dist/main/inject/ && vite build",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "package": "electron-builder"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@claude-lens/core": "workspace:*",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-webgl": "^0.19.0",
    "async-mutex": "^0.5.0",
    "node-pty": "^1.0.0",
    "playwright-core": "^1.40.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-reload": "2.0.0-alpha.1",
    "jsdom": "^25.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^2.1.0"
  },
  "build": {
    "appId": "com.claude-lens.desktop",
    "productName": "Claude Lens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
